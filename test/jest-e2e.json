{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "moduleDirectories": ["node_modules", "src"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    ".+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1",
    "@test/(.*)": "<rootDir>/tests/$1"
  }
}